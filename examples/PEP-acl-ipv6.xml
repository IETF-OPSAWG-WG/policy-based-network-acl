<?xml version="1.0" encoding="utf-8"?>
<acls xmlns="urn:ietf:params:xml:ns:yang:ietf-access-control-list"
      xmlns:ns2="urn:ietf:params:xml:ns:yang:ietf-ucl-acl"
      xmlns:ns="urn:ietf:params:xml:ns:yang:ietf-access-control-list">
  <acl>
    <name>another-sample-but-with-ipv6</name>

    <type>ipv6-acl-type</type>

    <aces>
      <ace>
        <name>rule1</name>

        <matches>
          <ipv4>
            <destination-ipv4-network>2001:db8::/64</destination-ipv4-network>
          </ipv4>
        </matches>

        <actions>
          <forwarding>accept</forwarding>
        </actions>

        <ns2:time-range>
          <ns2:recurrence>
            <ns2:freq>daily</ns2:freq>

            <ns2:byhour>8</ns2:byhour>

            <ns2:byday>
              <ns2:weekday>monday</ns2:weekday>
            </ns2:byday>

            <ns2:byday>
              <ns2:weekday>tuesday</ns2:weekday>
            </ns2:byday>

            <ns2:byday>
              <ns2:weekday>wednesday</ns2:weekday>
            </ns2:byday>

            <ns2:byday>
              <ns2:weekday>thursday</ns2:weekday>
            </ns2:byday>

            <ns2:byday>
              <ns2:weekday>friday</ns2:weekday>
            </ns2:byday>

            <ns2:duration>PT10:00:00</ns2:duration>
          </ns2:recurrence>
        </ns2:time-range>
      </ace>
    </aces>
  </acl>
</acls>
